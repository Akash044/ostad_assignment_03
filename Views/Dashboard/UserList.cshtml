
@{
    Layout = null;
}
@using ostad_assignment_03.Models
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User List</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="dataTableContainer" class="data-table">
        <h3 class="my-4 w-100 d-flex justify-content-center align-content-center">Registered Users</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody id="userData">
                    @{
                        BaseMember baseMember = new BaseMember();
                        List<BaseMember> users = baseMember.GetUsers();

                        foreach (BaseMember user in users)
                        {
                            <tr>
                                <th>@user.Id</th>
                                <th>@user.FirstName</th>
                                <th>@user.LastName</th>
                                <th>@user.Username</th>
                                <th>@user.Gender</th>
                                <th>@user.Role</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
